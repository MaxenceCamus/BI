{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs - {% endblock %}

{% block filtres %}
    <a href="{{ path('user_add') }}">
        <button type="button" class="btn btn-primary btn-fw">Ajouter un utilisateur</button>
    </a>
{% endblock %}
{% block body %}
    <div class="row page-title-header">
        <div class="col-12">
            <div class="page-header">
                <h2 class="page-title">Gestion des utilisateurs</h2>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Nom d'utilisateur</th>
                                <th>Email</th>
                                <th>Actif</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}

                            <tr>
                                <td></td>
                                <td>{{ user.username }}</td>
                                <td>{{ user.email }}</td>
                                <td>
                                    {% if user.enabled %}
                                        <span class="btn btn-success btn-rounded btn-fw">Compte actif</span>
                                    {% else %}
                                        <span class="btn btn-error btn-rounded btn-fw">Compte desactiv√©</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% for role in user.roles %}
                                        {% if role == "ROLE_ADMIN" %}
                                            <span class="btn btn-info btn-fw">Administrateur</span>
                                        {% endif %}
                                    {% endfor %}
                                </td>
                                <td>
                                    <a href="{{ path('user_edit', {'id': user.id}) }}">
                                        <button type="button" class="btn btn-outline-warning">Modifier</button>
                                    </a>
                                </td>
                                <td>
                                    {% if app.user != user %}
                                        <a href="{{ path('user_delete', {'id': user.id}) }}" data-confirm="Voulez-vous vraiment supprimer cet utilisateur ?">
                                            <button type="button" class="btn btn-outline-danger">Supprimer</button>
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
